{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": ["*"]
    },
    "outDir": "./dist/",
    "target": "es6",
    "pretty": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "module": "commonjs",
    "jsx": "react",
    "lib": [
      "dom",
      "es5",
      "es6",
      "es7",
      "esnext.asynciterable"
    ]
  },
  "include": [
    "./src/**/*"
  ]
}
